generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Paylink {
  id           String   @id @default(cuid())
  to           String
  tokenAddress String
  chainId      Int
  amountMicros BigInt
  status       String   @default("PENDING") // PENDING | PAID
  txHash       String?
  createdAt    DateTime @default(now())
  paidAt       DateTime?
}